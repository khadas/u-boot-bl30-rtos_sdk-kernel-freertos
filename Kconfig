menu "Target"

config KERNEL_ARCH_DIR
	string
	default "ARM_CA53_64_BIT" if ARM_CA53_64_BIT
	default "RISC-V" if RISCV
	default "Xtensa" if XTENSA
	help
	  System arch dir string.

config KERNEL_COMPILER_DIR
	string
	default "GCC" if ARM_CA53_64_BIT
	default "GCC" if RISCV
	default "XCC" if XTENSA
	help
	  System compiler dir string.

config MEMORY_LEAK
	bool "memory malloc/free trace"
	help
	  Track task memory usage information.

config MEMLEAK_ARRAY_SIZE
	hex "memleak trace arry size"
	default 128
	help
	  Set memleak trace buffer size.

endmenu
